# Joplin Server - Sample .env file
# Copy or rename this file to `.env` and adjust values as needed.
# See: https://github.com/laurent22/joplin/blob/dev/packages/server/src/env.ts

# -----------------------------------------------------------------------------
# Database (required â€“ used by both Postgres container and Joplin app)
# -----------------------------------------------------------------------------
DB_CLIENT=pg

POSTGRES_PASSWORD=joplin
POSTGRES_DB=joplin
POSTGRES_USER=joplin
POSTGRES_PORT=5432
# POSTGRES_HOST is set to 'db' in compose for the app; only override if needed
# POSTGRES_HOST=localhost

# -----------------------------------------------------------------------------
# Application URL (required)
# -----------------------------------------------------------------------------
# Base URL where Joplin Server is reached (e.g. https://joplin.yourdomain.com)
APP_BASE_URL=https://joplin.example.com

# -----------------------------------------------------------------------------
# Traefik (optional) - used for router rule Host(`joplin.${DEFAULT_DOMAIN}`)
# -----------------------------------------------------------------------------
DEFAULT_DOMAIN=example.com

# -----------------------------------------------------------------------------
# General (optional)
# -----------------------------------------------------------------------------
# APP_NAME=Joplin Server
# APP_PORT=22300
# SIGNUP_ENABLED=false
# LOG_LEVEL=info
# IS_ADMIN_INSTANCE=true
# LOCAL_AUTH_ENABLED=true
# COOKIES_SECURE=true
# RUNNING_IN_DOCKER=true

# -----------------------------------------------------------------------------
# Mailer (optional) - for signup/password reset emails
# -----------------------------------------------------------------------------
# MAILER_ENABLED=false
# MAILER_HOST=
# MAILER_PORT=465
# MAILER_SECURITY=tls
# MAILER_AUTH_USER=
# MAILER_AUTH_PASSWORD=
# MAILER_NOREPLY_NAME=
# MAILER_NOREPLY_EMAIL=
# SUPPORT_EMAIL=
# SUPPORT_NAME=
# BUSINESS_EMAIL=

# -----------------------------------------------------------------------------
# Database tuning (optional)
# -----------------------------------------------------------------------------
# DB_MAX_CONNECTIONS=10
# DB_AUTO_MIGRATION=true

# -----------------------------------------------------------------------------
# Storage (optional, default: Type=Database)
# -----------------------------------------------------------------------------
# STORAGE_DRIVER=Type=Database
# STORAGE_DRIVER_FALLBACK=

# -----------------------------------------------------------------------------
# Security / MFA (optional)
# -----------------------------------------------------------------------------
# MFA_ENABLED=0
# MFA_ENCRYPTION_KEY=

# -----------------------------------------------------------------------------
# Data retention (optional)
# -----------------------------------------------------------------------------
# USER_DATA_AUTO_DELETE_ENABLED=false
# USER_DATA_AUTO_DELETE_AFTER_DAYS=90
# EVENTS_AUTO_DELETE_ENABLED=false
# EVENTS_AUTO_DELETE_AFTER_DAYS=30

# -----------------------------------------------------------------------------
# LDAP / SAML (optional)
# -----------------------------------------------------------------------------
# LDAP_1_ENABLED=false
# SAML_ENABLED=false

# Tip: If you are using authentik follow this guide for SSO. 
# https://integrations.goauthentik.io/chat-communication-collaboration/joplin/