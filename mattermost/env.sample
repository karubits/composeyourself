# Mattermost - Sample .env file
# Copy or rename this file to `.env` and adjust values as needed.
# See: https://docs.mattermost.com/configure/configuring-mattermost-server.html

# -----------------------------------------------------------------------------
# Domain and Traefik (optional)
# -----------------------------------------------------------------------------
DEFAULT_DOMAIN=example.com

# -----------------------------------------------------------------------------
# Compose / image and restart (optional)
# -----------------------------------------------------------------------------
POSTGRES_IMAGE_TAG=16-alpine
MATTERMOST_IMAGE=mattermost-enterprise-edition
MATTERMOST_IMAGE_TAG=9
RESTART_POLICY=unless-stopped
MATTERMOST_CONTAINER_READONLY=false

# -----------------------------------------------------------------------------
# Paths (required for compose volume mounts)
# -----------------------------------------------------------------------------
POSTGRES_DATA_PATH=/path/to/mattermost/postgres
MATTERMOST_CONFIG_PATH=/path/to/mattermost/config
MATTERMOST_DATA_PATH=/path/to/mattermost/data
MATTERMOST_LOGS_PATH=/path/to/mattermost/logs
MATTERMOST_PLUGINS_PATH=/path/to/mattermost/plugins
MATTERMOST_CLIENT_PLUGINS_PATH=/path/to/mattermost/client/plugins
MATTERMOST_BLEVESETTINGS_INDEXDIR=/path/to/mattermost/bleve-indexes

# -----------------------------------------------------------------------------
# Database and app (required)
# -----------------------------------------------------------------------------
# Postgres (set in compose for postgres service)
POSTGRES_USER=mmuser
POSTGRES_PASSWORD=changeme
POSTGRES_DB=mattermost

